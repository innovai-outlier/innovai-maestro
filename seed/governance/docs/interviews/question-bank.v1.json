  "questions": [
    {
      "id": "CW-01",
      "section": "Context & Why",
      "intent": "Define the core problem and target user.",
      "question": "What problem are we solving, and for whom?",
      "followups": [
        "Who feels the pain the most?",
        "What happens if we do nothing for 6 months?"
      ],
      "answer_type": "free_text",
      "priority": "must",
      "tags": [
        "problem",
        "user"
      ],
      "outputs": [
        "spec"
      ]
    },
    {
      "id": "CW-02",
      "section": "Context & Why",
      "intent": "Capture current state and pain points.",
      "question": "What happens today (current workflow), and what hurts most?",
      "followups": [
        "Where does time/money get wasted?",
        "What errors happen repeatedly?"
      ],
      "answer_type": "free_text",
      "priority": "must",
      "tags": [
        "current_state",
        "pain"
      ],
      "outputs": [
        "spec"
      ]
    },
    {
      "id": "CW-03",
      "section": "Context & Why",
      "intent": "Define success criteria and measurable outcomes.",
